diff --git a/setup.fish b/setup.fish
new file mode 100755
index 0000000..b270b6d
--- /dev/null
+++ b/setup.fish
@@ -0,0 +1,22 @@
+#!/usr/bin/env fish
+
+# Directories containing Cargo.toml files to update
+set crates "curve25519-dalek" "x25519-dalek" "ed25519-dalek"
+
+for crate in $crates
+    set cargo_toml "$crate/Cargo.toml"
+    if test -f "$cargo_toml"
+        echo "Checking $cargo_toml..."
+        # Check if zeroize exists in the file
+        if grep -q "zeroize = {" "$cargo_toml"
+            echo "Updating zeroize version in $cargo_toml"
+            # Replace version = "1" with version = "1.8", preserving other attributes
+            sed -i 's/zeroize = { version = "1"/zeroize = { version = "1.8"/' "$cargo_toml"
+            echo "Updated $cargo_toml"
+        else
+            echo "No zeroize dependency found in $cargo_toml"
+        end
+    else
+        echo "Cargo.toml not found in $crate"
+    end
+end
